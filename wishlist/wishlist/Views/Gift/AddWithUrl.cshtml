@model AddGiftRequest
@{
    ViewData["Action"] = "Add";
}
    <h3>Add gift</h3>
    <form asp-controller="Gift" asp-action="@ViewData["Action"]" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="GiftUrl" class="font-weight-bold">Link to gift</label><br />
            <input asp-for="GiftUrl">
            <span asp-validation-for="GiftUrl" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Quantity" class="font-weight-bold">Quantity</label><br />
            <input asp-for="Quantity">
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div>
            <input type="hidden" asp-for="EventId" value="@Model.EventId">
        </div>
        <button type="submit" class="btn btn-success">Add</button>
    </form>
<br />
<form asp-controller="Home" asp-action="Index" method="get">
    <button type="submit" class="btn btn-info">Cancel</button>
</form>
