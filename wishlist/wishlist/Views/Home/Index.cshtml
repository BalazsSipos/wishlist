@model List<Event>
<head>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
@if (User.Identity.IsAuthenticated)
{
    <h1 class="black">Upcoming events</h1>
}
else
{
    <h1 class="black">Please sign in!</h1>
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-horizontal">
                <div class="img-square-wrapper">
                    <a asp-controller="Event" asp-action="Add">
                        <img src="~/img/button_add/addEvent.png" width="550" height="150" alt="Add Event">
                    </a>
                </div>
            </div>
        </div>
    </div>
    @foreach (var eventItem in Model)
    {
        <div class="col-md-6">
            <div class="card">
                <div class="card-horizontal">
                    <div class="img-square-wrapper">
                        <img src="@eventItem.PhotoUrl" width="300" height="150" alt="Event picture">
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">@eventItem.Name</h4>
                        <p class="card-text"><b>Date:</b> @eventItem.EventDate.Day/@eventItem.EventDate.Month/@eventItem.EventDate.Year</p>
                        <p class="card-text">Address: @eventItem.Address</p>
                        <div class="menu-button">
                            <form asp-controller="Event" asp-action="Show" method="get" asp-route-Id="@eventItem.EventId">
                                <button type="submit" class="btn btn-success">Go to the event page</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</div>