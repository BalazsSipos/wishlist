@model Event

@{
    var color = "white";
    switch (Model.EventType.Name)
    {
        case "Christmas":
            Layout = "_LayoutChristmas";
            color = "white";
            break;
        case "Birthday":
            Layout = "_LayoutBirthday";
            color = "black";
            break;
        case "Wedding":
            Layout = "_LayoutWedding";
            color = "black";
            break;
        default:
            Layout = "_LayoutDefault";
            color = "white";
            break;
    }
}

<div>
    <div class=@color>
        <h1>@Model.Name</h1>
        <h4><i class="fas fa-calendar-day"></i> @Model.EventDate.Day/@Model.EventDate.Month/@Model.EventDate.Year</h4>
        <h4><i class="fas fa-clock"></i> @Model.EventDate.Hour h</h4>
        <h4><i class="fas fa-map-marked"></i> @Model.Address</h4>
        <h4><i class="fas fa-comment-dots"></i> @Model.Message</h4>
    </div>
    <br />
    <h1 class=@color>Gifts</h1>
    <br />
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-horizontal">
                    <div class="img-square-wrapper">
                        <a asp-controller="Gift" asp-action="AddWithUrl" asp-route-Id="@Model.EventId">
                            <img src="~/img/button_add/addnewgift.png" width="550" height="150" alt="Add new gift">
                        </a>
                    </div>
                </div>
            </div>
        </div>
        @foreach (var gift in Model.Gifts)
        {
            <div class="col-md-6">
                <div class="card">
                    <div class="card-horizontal">
                        <div class="img-square-wrapper">
                            <a href=@gift.GiftUrl>
                                <img src=@Html.DisplayFor(modelGift => gift.PhotoUrl) width="300" height="150" alt="Card image cap">
                            </a>
                        </div>
                        <div class="card-body">
                            <a href=@gift.GiftUrl>
                                <h4 class="card-title">@Html.DisplayFor(modelGift => gift.Name)</h4>
                            </a>
                            <p class="card-text">Unit price: @Html.DisplayFor(modelGift => gift.Price)</p>
                            <p class="card-text">Quantity: @Html.DisplayFor(modelGift => gift.Quantity)</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>