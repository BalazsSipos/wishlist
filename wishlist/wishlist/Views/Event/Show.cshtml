@model Event


@{
  switch (Model.EventType.Name)
  {
    case "Christmas":
      Layout = "_LayoutChristmas";
      break;
    case "Birthday":
      Layout = "_LayoutBirthday";
      break;
    case "Wedding":
      Layout = "_LayoutWedding";
      break;
    default:
      Layout = "_LayoutDefault";
      break;
  }
}

<div>
  <div>
    <h1>@Model.Name</h1>
    <h4><i class="fas fa-calendar-day"></i> @Model.EventDate.Day/@Model.EventDate.Month/@Model.EventDate.Year</h4>
    <h4><i class="fas fa-clock"></i> @Model.EventDate.Hour h</h4>
    <h4><i class="fas fa-map-marked"></i> @Model.Address</h4>
    <h4><i class="fas fa-comment-dots"></i> @Model.Message</h4>
  </div>
  <br />
  <h2>Gifts</h2>
  <br />
  <div class="row">
    @foreach (var gift in Model.Gifts)
    {
      <div class="col-md-6">
        <div class="card">
          <div class="card-horizontal">
            <div class="img-square-wrapper">
              <img src=@Html.DisplayFor(modelGift => gift.PhotoUrl) width="300" height="150" alt="Card image cap">
            </div>
            <div class="card-body">
              <h4 class="card-title">@Html.DisplayFor(modelGift => gift.Name)</h4>
              <p class="card-text">Unit price: @Html.DisplayFor(modelGift => gift.Price)</p>
              <p class="card-text p-3 mb-2 bg-light text-dark">Quantity: @Html.DisplayFor(modelGift => gift.Quantity)</p>
            </div>
          </div>
        </div>
      </div>
    }
  </div>
  <h2>Invited people</h2>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>Email address</th>
        <th>Status</th>
      </tr>
    </thead>
    @foreach (var invitation in Model.Invitations)
    {
      <tr>
        <td>@invitation.InvitedEmail</td>
        <td>@invitation.IsEmailSent</td>
      </tr>
    }
  </table>

  <h2>Add invitation</h2>

  <form asp-controller="Invitation" asp-action="AddInvitation" method="post" asp-route-Id="@Model.EventId">
    <div class="form-group form-check">
      <input type="email" class="form-check-input" name="InvitedEmail">
    </div>
    <button type="submit" class="btn btn-primary">Add email invitation</button>
  </form>
</div>